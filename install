#!/bin/bash


mkdir /usr/local/lib/boffin > /dev/null


# gcc -O3 -DUSE_RESTRICT -g -fPIC -WALL $(pkg-config --cflags --libs python3) ______

gcc -O3 -DUSE_RESTRICT -g -fPIC -Wall ./file_handle/*.c -shared -o /usr/local/lib/boffin/file_handle.so

gcc -O3 -DUSE_RESTRICT -g -fPIC -Wall ./boffin/*.c -shared -o /usr/local/lib/boffin/fel_inter.so

gcc -O3 -DUSE_RESTRICT -g -Wall -o /usr/local/bin/boffin main.c /usr/local/lib/boffin/fel_inter.so /usr/local/lib/boffin/file_handle.so

echo Done
