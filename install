#!/bin/bash


mkdir /usr/local/lib/boffin


gcc -g -fPIC -Wall -Wextra -pedantic ./file_handle/*.c -shared -o /usr/local/lib/boffin/file_handle.so

gcc -g -fPIC -Wall -Wextra -pedantic ./inter/*.c -shared -o /usr/local/lib/boffin/fel_inter.so

gcc -g -Wall -o /usr/local/bin/boffin main.c /usr/local/lib/boffin/fel_inter.so /usr/local/lib/boffin/file_handle.so
